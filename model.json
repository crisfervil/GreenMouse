{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "definitions": {
    "entity":{
        "id":"#entity",
        "type": "object",
        "title": "Defines an entity in the system",
        "description": "Defines an entity in the system",
        "name": "Entity",        
        "pluralName": "Entities",
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "pluralName": {
            "description": "Name to be shown in lists of this entity",
            "type": "string"
          },
          "connection": {
            "id": "connection",
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              }
            }
          }
    }
  }
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "entities": {
      "type": "array",
      "items": { "$ref":"#entity"  }
      },
     "configuration":{
       "type":"object"
     }
    },
  "required": ["name"]
}