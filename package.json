{
  "name": "jigsaw",
  "version": "0.0.1",
  "description": "Extensible DSL engine",
  "main": "./index.js",
  "author": "crisfervil",
  "bin": {
    "jigs": "bin/run.js"
  },
  "scripts": {
    "build": "typings install && tsc -p .",
    "build-dev": "tsc -p . --noUnusedParameters --noUnusedLocals",
