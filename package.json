    "cover": "istanbul cover ./node_modules/mocha/bin/_mocha -- --recursive",
    "doc": "jsdoc core/ -r -d doc"
  },
  "dependencies": {
    "debug": "^2.2.0",
    "ejs": "^2.3.4",
    "express": "^4.14.0",
    "ncp": "^2.0.0",
    "tv4": "^1.2.7"
  },
  "devDependencies": {
    "istanbul": "^0.4.2",
    "jsdoc": "^3.4.0",
    "mocha": "^3.0.2",
    "typescript": "^2.0.3",
    "typings": "^1.3.3"
  }
}
